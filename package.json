{
  "name": "rison-node",
  "version": "2.0.0",
  "main": "js/rison.js",
  "scripts": {
    "preversion": "npm run test",
    "version": "auto-changelog -p && auto-authors && git add CHANGELOG.md AUTHORS.md",
    "test": "npm run lint && tape tests/*.js",
    "lint": "eslint \"js/*.js\" \"tests/*.js\"",
    "precommit": "lint-staged",
    "prepush": "npm run test"
  },
  "author": "Joe Fleming (https://github.com/w33ble)",
  "description": "data serialization format optimized for compactness in URIs",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/w33ble/rison-node.git"
  },
  "files": [
    "js",
    "LICENSE.md",
    "README.md",
    "CHANGELOG.md"
  ],
  "lint-staged": {
    "*.{mjs,js}": [
      "eslint --fix"
    ],
    "*.{mjs,js,json,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "cltemplate.hbs",
    "ignoreCommitPattern": "(chore|test)|(add|Add).+(author|Author|contributor|Contributor)",
    "commitLimit": false
  },
  "devDependencies": {
    "auto-authors": "^0.1.1",
    "auto-changelog": "^1.4.6",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.0",
    "tape": "^4.2.2"
  }
}
